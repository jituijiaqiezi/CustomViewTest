<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:gravity="bottom"
    android:orientation="vertical">

    <custom.downloading.Down360ViewGroup
        android:id="@+id/down_loading_viewgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:bg_color="#33CCFF"
        app:cancel_back_icon="@drawable/close"
        app:continue_back_icon="@drawable/play"
        app:left_loading_speed="2500"
        app:right_loading_speed="8"
        app:status_text_color="#cccccc"
        app:stop_back_icon="@drawable/stop" />

</LinearLayout>